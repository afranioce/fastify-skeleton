{
  "name": "fastify-skeleton",
  "version": "1.0.0",
  "description": "A simple api skeleton for fastify",
  "main": "build/main/index.js",
  "module": "build/module/index.js",
  "repository": "https://github.com/afranioce/fastify-skeleton",
  "license": "UNLICENSED",
  "keywords": [],
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "clean": "rm -rf build",
    "dev:cli": "ts-node src/command.ts",
    "dev:serve": "ts-node src/index.ts",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" \"tests/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-p test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" \"tests/**/*.ts\" --list-different",
    "test:all": "nyc --silent ava",
    "check-cli": "run-s test diff-integration-tests check-integration-tests",
    "check-integration-tests": "run-s check-integration-test:*",
    "diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
    "watch": "nodemon -e ts -w ./src -x yarn run dev:serve",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent ava --watch",
    "cov": "run-s build test:all cov:html cov:lcov && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:lcov": "nyc report --reporter=lcov",
    "cov:send": "run-s cov:lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "prepare-release": "run-s test cov:check doc:html version doc:publish"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "commander": "^8.0.0",
    "dotenv": "^10.0.0",
    "fastify": "^3.18.0",
    "fastify-decorators": "^3.10.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/node": "^15.12.5",
    "@types/pino": "^6.3.8",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "ava": "^3.12.1",
    "codecov": "^3.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "gh-pages": "^3.1.0",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^6.0.1",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.21.2",
    "typescript": "^4.0.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!tests",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "files": [
      "tests/**/*.spec.*"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "verbose": true,
    "environmentVariables": {
      "ENVIRONMENT": "test",
      "NODE_ENV": "test",
      "LOG_LEVEL": "debug"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "docker-compose -f docker-compose.cli.yml run --rm yarn run fix"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
